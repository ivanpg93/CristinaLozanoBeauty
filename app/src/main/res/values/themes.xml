<resources>

    <style name="Base.Theme.Cristinalozanobeauty" parent="Theme.Material3.DayNight.NoActionBar" />

    <!--Toolbar-->
    <style name="Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <!--Login logo-->
    <style name="LoginLogo">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--Login title-->
    <style name="LoginTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--Text field login-->
    <style name="TextViewLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!--Edit text login-->
    <style name="EditTextFieldLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--Access activity button login-->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!--Text view hello community-->
    <style name="TextViewCommunityHello">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Text view try community-->
    <style name="TextViewTryCommunity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommunitySelected">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="CommunityUnselected">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>