<resources>

    <style name="Base.Theme.Cristinalozanobeauty" parent="Theme.Material3.Light.NoActionBar" />

    <!--Toolbar-->
    <style name="Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbarTextSize</item>
    </style>

    <!--Bottom navigation-->
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextAppearance</item>
    </style>

    <style name="BottomNavTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">18sp</item>
    </style>

    <!--Button-->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/buttonPadding</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!--Client form-->
    <style name="ClientForm" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <!--Client form text-->
    <style name="ClientFormText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <!--Client form date picker-->
    <style name="ClientFormDatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/gold</item>
        <item name="materialCalendarHeaderLayout">@style/CalendarHeaderLayout</item>
        <item name="materialCalendarMonthNavigationButton">@color/gold</item>
        <item name="materialCalendarYearNavigationButton">@color/gold</item>
    </style>

    <style name="CalendarHeaderLayout" parent="@style/Widget.Material3.MaterialCalendar.HeaderLayout">
        <item name="android:visibility">gone</item>
    </style>

    <!--Checkbox-->
    <style name="ClientFormCheckbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/gold</item>
        <item name="colorControlNormal">@color/black</item>
    </style>


    <!--Login logo-->
    <style name="LoginLogo">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--Login title-->
    <style name="LoginTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--Text field login-->
    <style name="TextViewLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!--Edit text login-->
    <style name="EditTextFieldLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--Text view hello community-->
    <style name="TextViewCommunityHello">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Text view try community-->
    <style name="TextViewTryCommunity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommunitySelected">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="CommunityUnselected">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>